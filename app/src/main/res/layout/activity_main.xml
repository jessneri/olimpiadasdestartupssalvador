<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME 1"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/nomeTime1"
        android:textColorHint="#FFFFFF"
        android:padding="10dp"
        android:hint="Digite o nome do Time 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        />
    <TextView
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME 2"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/nomeTime2"
        android:textColorHint="#FFFFFF"
        android:hint="Digite o nome do Time 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/avancarTela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/estilo_botao"
        android:text="AvanÃ§ar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>