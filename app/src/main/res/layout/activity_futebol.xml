<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".FutebolActivity"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/fut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FUTEBOL"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fut"
        android:gravity="center_horizontal"
        android:id="@+id/linear">

        <TextView
            android:id="@+id/placarFut1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="110sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fut"
            android:layout_toRightOf="@id/placarFut1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="x"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:id="@+id/placarFut2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fut"
            android:layout_toRightOf="@id/x"
            android:layout_centerInParent="true"
            android:text="3"
            android:textSize="110sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear2"
        android:layout_below="@id/linear">

        <TextView
            android:id="@+id/nomeTime1Fut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="25dp"
            android:textSize="35dp"
            android:text="sddsds"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:id="@+id/nomeTime2Fut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wewef"
            android:layout_marginLeft="180dp"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>


    <Button
        android:id="@+id/botaoPosit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="+"
        android:textSize="35dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/linear2"
        android:textColor="#FFFFFF"
        android:background="@drawable/estilo_botao_placar"
        />
    <Button
        android:id="@+id/botaoNegat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="35dp"
        android:layout_below="@id/linear2"
        android:layout_toRightOf="@id/botaoPosit1"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/estilo_botao_placar"
        />
    <Button
        android:id="@+id/botaoPosit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="35dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/linear2"
        android:layout_toRightOf="@id/botaoNegat1"
        android:textColor="#FFFFFF"
        android:background="@drawable/estilo_botao_placar2"
        />
    <Button
        android:id="@+id/botaoNegat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="35dp"
        android:layout_below="@id/linear2"
        android:layout_toRightOf="@id/botaoPosit2"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/estilo_botao_placar2"
        />

    <Button
        android:id="@+id/botaoFutFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_botao"
        android:text="FINAL"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>