<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="horizontal"
    tools:context=".BasqueteActivity">

    <TextView
        android:id="@+id/basq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BASQUETE"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:id="@+id/linearbasq1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/basq">

        <TextView
            android:id="@+id/placarbasq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="80sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fut"
            android:layout_toRightOf="@id/placarFut1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="x"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:id="@+id/placarbasq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="80dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearbasq2"
        android:gravity="center"
        android:layout_below="@id/linearbasq1">

        <TextView
            android:id="@+id/nomeTime1Basq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdf"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:id="@+id/nomeTime2Basq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:text="sjdfk"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearbasq3"
        android:layout_below="@id/linearbasq2"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasq2time1"
            android:layout_below="@id/linearbasq1"
            android:background="@drawable/estilo_botao_placar"
            android:text="+2 pt"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:padding="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasq3time1"
            android:layout_below="@id/linearbasq1"
            android:background="@drawable/estilo_botao_placar"
            android:text="+3 pt"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearbasq4"
        android:layout_below="@id/linearbasq2"
        android:layout_toRightOf="@id/linearbasq3"
        android:layout_marginLeft="80dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasq2time2"
            android:layout_below="@id/linearbasq1"
            android:background="@drawable/estilo_botao_placar2"
            android:text="+2 pt"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:padding="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasq3time2"
            android:layout_below="@id/linearbasq1"
            android:background="@drawable/estilo_botao_placar2"
            android:text="+3 pt"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearbasq5"
        android:layout_below="@id/linearbasq4"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasqlancetime1"
            android:background="@drawable/estilo_botao_placar"
            android:text="Lance Livre"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="15dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="90dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaobasqlancetime2"
            android:background="@drawable/estilo_botao_placar2"
            android:text="Lance Livre"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:paddingHorizontal="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/botaoBasqFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_botao"
        android:text="FINAL"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>